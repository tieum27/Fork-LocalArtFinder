<p id="notice"><%= notice %></p>

<h1>Events</h1>
<head>
  <style>
     #map {
      height: 400px;
      width: 50%;
     }
  </style>
</head>
<body>

  <h3>Condos in Gas Lamp District</h3>
  <div id="map"></div>
</body>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Gallery</th>
      <th>Artist</th>
      <th>Art</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.start %></td>
        <td><%= event.end %></td>
        <td><%= event.gallery %></td>
        <td><%= event.artist %></td>
        <td><%= event.art %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
